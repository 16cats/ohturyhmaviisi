[MASTER]

ignore=tests

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        too-few-public-methods,
        too-many-statements,
        too-many-branches,
        duplicate-code

[FORMAT]

max-line-length=100

[REFACTORING]

max-nested-blocks=5

[DESIGN]

max-locals=20