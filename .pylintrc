[MASTER]

ignore=tests

[MESSAGES CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        too-few-public-methods,
        too-many-statements

[FORMAT]

max-line-length=80

[REFACTORING]

max-nested-blocks=3

[DESIGN]

max-branches=15